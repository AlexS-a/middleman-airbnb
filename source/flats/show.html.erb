<% flat = data.flats[owner] %>

<!-- Inject flat data in template -->
<div>
  <div class="card" style="height: 300px; background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://kitt.lewagon.com/placeholder/cities/<%= flat.city_slug %>');">
  <div class="card-category">Popular</div>
  <div class="card-description">
    <p><%= flat.name %></p>
    <h2><%= flat.description %></h2>
    <p><%= flat.city_name %></p>
  </div>
  <%= image_tag "https://kitt.lewagon.com/placeholder/users/#{owner}", class: "img-circle ""card-profile"%>
  </div>

</div>

  <body>

  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
        <form action="#">
          <h1 class="text-center">Book Your Flat</h1>
          <div class="row">
            <div class="col-xs-6">
              <div class="form-group">
                <label for="first-name">First name</label>
                <input type="first-name" id="first-name" class="form-control">
              </div>
            </div>
            <div class="col-xs-6">
              <div class="form-group">
                <label for="last-name">Last name</label>
                <input type="last-name" id="last-name" class="form-control">
              </div>
            </div>
          </div>
          <div class="form-group">
            <label for="email">Your email</label>
            <input type="email" id="email" class="form-control">
          </div>
          <input type="submit" value="Book Now" class="btn btn-primary form-control">
        </form>
    </div>
  </div>
</div>

    <!-- Your responsive signup form -->

  </body>
</html>
